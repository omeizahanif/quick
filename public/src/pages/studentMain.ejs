<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>nouquick</title>
  <link href="/fonts/css/all.css" rel="stylesheet">
  <link href="/style/main.css" rel="stylesheet">
  <link href="/style/form.css" rel="stylesheet">
  <link rel="manifest" href="/manifest.json">
  <script src="/index.js"></script>
  <link rel="apple-touch-icon" sizes="57x57" href="/apple-icon-57x57.png">
<link rel="apple-touch-icon" sizes="60x60" href="/apple-icon-60x60.png">
<link rel="apple-touch-icon" sizes="72x72" href="/apple-icon-72x72.png">
<link rel="apple-touch-icon" sizes="76x76" href="/apple-icon-76x76.png">
<link rel="apple-touch-icon" sizes="114x114" href="/apple-icon-114x114.png">
<link rel="apple-touch-icon" sizes="120x120" href="/apple-icon-120x120.png">
<link rel="apple-touch-icon" sizes="144x144" href="/apple-icon-144x144.png">
<link rel="apple-touch-icon" sizes="152x152" href="/apple-icon-152x152.png">
<link rel="apple-touch-icon" sizes="180x180" href="/apple-icon-180x180.png">
<link rel="icon" type="image/png" sizes="192x192"  href="/android-icon-192x192.png">
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
<link rel="icon" type="image/png" sizes="96x96" href="/favicon-96x96.png">
<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">

<meta name="msapplication-TileColor" content="#ffffff">
<meta name="msapplication-TileImage" content="/ms-icon-144x144.png">
<meta name="theme-color" content="#ffffff">
</head>
<body>
  <div class="container">
    <nav class="nav-extended">
      <div class="nav-wrapper">
          <a href="/" class="title">nouquick</a>
          <a href="/" class="nav-link"><i class="fas fa-location-arrow"></i></a>      
      </div>
      <div class="nav-content">
        <a href="#students" class="return-tab"><i class="fas fa-book"></i></a>
        <a href="#results" class="return-tab"><i class="fas fa-receipt"></i></a>
      </div>
   </nav>
   <main>
        <section id="students" class="admin-content">
          <div>
            <h2>PERSONAL INFORMATION</h2>
          </div>
          <div>
              <span class="labels">Name:</span>
              <span><%=profile.firstName%></span>
              <span><%=profile.lastName%></span>
          </div>
          <div>
              <span class="labels">Matric Number:</span>
              <span><%=profile.matric%></span>
          </div>
          <div>
              <span class="labels">Programme:</span>
              <span><%=profile.programme%></span>
              <span><%=profile.department%></span>
              <hr>
          </div>
          
          <div>
              <table>
                  <thead>
                    <td>Semester</td>
                    <td>Code</td>
                    <td>Title</td>
                    <td>Unit</td>
                  </thead>
                  <%profile.courses.forEach(function(chosenCourse){%>
                    <%for(let i = 0; i < courses.length; i++){ %>
                      <%if(chosenCourse == courses[i].title){%>
                        <tr>
                          <td><%=courses[i].semester%></td>
                          <td><%=courses[i].code%></td>
                          <td><%=courses[i].title%></td>
                          <td><%=courses[i].units%></td>
                        </tr>
                      <%}%>
                    <%}%>
                  <%})%>
                </table>
          </div>
        </section>     
     
        <section id="results" class="admin-content">
            <div>
            <h2>FINAL RESULTS</h2>
            <p>GPA: <span><%=results.gpa%></span></p>
          </div>
          <div>
              <table>
                <thead>
                  <td>Code</td>
                  <td>Final Grade</td>
                </thead>
                
                <tbody>
                  <%results.score.map(score => {%>
                    
                  <tr>  
                    <td><%=score.code%></td>
                    <%let grade = ''%>
                    <%if(score.finalGrade == 5) {%>
                    <%grade = 'A'%>
                    <%} else if (score.finalGrade == 4) {%>
                    <%grade = 'B'%>
                    <%} else if (score.finalGrade == 3) {%>
                    <%grade = 'C'%>
                    <%} else if (score.finalGrade == 2) {%>
                    <%grade = 'D'%>
                    <%} else if (score.finalGrade == 1) {%>
                    <%grade = 'E'%>
                    <%} else {%>
                    <%grade = 'F'%>
                    <%}%>
                    <td><%=`${score.finalGrade} (${grade})` || 'Not Offered'%></td>
                    
                  </tr> 
                  
                  <%})%>
                </tbody>
                                
              </table>
          </div>   
        </section>


   </main>
  </div>

</body>
</html>